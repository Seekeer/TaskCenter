<UserControl x:Class="Utils.Controls.OkCancelButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              >
    <UserControl.Resources>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Width" Value="60" />
        </Style>

    </UserControl.Resources>
    <StackPanel Height="23" Orientation="Horizontal">
            
        <Button Name="OkButton" Content="Ok" Command="{Binding}" Click="_CloseWindow"/>
            
        <Button Content="Cancel" Margin="20 0 0 0" Click="_CloseWindow"/>
    </StackPanel>
</UserControl>
